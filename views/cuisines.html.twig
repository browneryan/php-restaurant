<!DOCTYPE html>
<html>
  <head>
    {% include '/includes/head.html.twig' %}
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>{{ cuisine.getName }}</h1>
            {% if restaurants is not empty %}
                <p>Here are the restaurants:</p>
                <ul>
                    {% for restaurant in restaurants %}
                        <li><a href="/restaurants/{{ restaurant.getRestaurantID }}">{{ restaurant.getName }}</a></li>
                    {% endfor %}
                </ul>
                {% else %}
                    <p>
                        no restaurants found
                    </p>
            {% endif %}
        </div>
        <div class="col-md-6">
          <form action='/restaurants' method='post'>
              <input id="cuisine_id" name="cuisine_id" type="hidden" value="{{ cuisine.getId() }}">
              <label for='name'>Restaurant Name</label>
              <input id='name' class="form-control" name='name' type='text'>
              <button type="submit" class="btn btn-primary">Add Restaurant</button>
            </form>
        </div>
      </div>
    </div>
  </body>
</html>
